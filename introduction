git config --global user.email "205844372@qq.com"
git config --global user.name "LiuJi0Fen04"

ssh-keygen -t rsa -b 4096 -C "your_email@example.com"

cat ~/.ssh/id_rsa.pub | clip  # For Windows
pbcopy < ~/.ssh/id_rsa.pub   # For macOS
cat ~/.ssh/id_rsa.pub        # For Linux (then manually copy)



echo "# git_introduction" >> README.md
git init
git add README.md
git commit -m "first commit"
git branch -M master
git remote add origin git@github.com:LiuJi0Fen04/git_introduction.git
git push -u origin master #In the git push -u origin master command, the -u flag stands for "upstream" and is used to set the tracking branch.


git branch -r


git rm --cached -r <directory>

git config --global core.excludesfile ~/.gitignore_global

git push origin --delete main

git reset --hard HEAD

